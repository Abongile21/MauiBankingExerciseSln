<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBankingExercise.Views.CustomersListView"
             xmlns:vm="clr-namespace:MauiBankingExercise.ViewModels"
             xmlns:models="clr-namespace:MauiBankingExercise.Models"
             x:DataType="vm:CustomersListViewModel"
             Title="Customers">

    <StackLayout Padding="20" Spacing="10">


        <Label Text="Select Customer" FontSize="24" HorizontalOptions="Center"/>

        <CollectionView ItemsSource="{Binding Customers}" SelectedItem="{Binding SelectedCustomer}" SelectionMode="Single" SelectionChangedCommand="{Binding SelectCustomerCommand}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Customer">
                    <Border Padding="15" Margin="5" BackgroundColor="LightGray">
                        <StackLayout>
                            <Label Text="{Binding FirstName}" FontAttributes="Bold" FontSize="18"/>
                            <Label Text="{Binding LastName}" FontSize="16"/>
                        </StackLayout>
                    </Border
                            >
                </DataTemplate>
            </CollectionView.ItemTemplate>

            
        </CollectionView>
    </StackLayout>
</ContentPage>
